<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/newtopic_container_title"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newtopic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"
                android:textSize="17sp"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="content" />
        </RelativeLayout>

        <RelativeLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_list_bg"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/newtopic_boardname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingEnd="30dp"
                android:layout_margin="5dp"
                android:textAppearance="?attr/textAppearanceListItem"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                tools:text="boardname" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toStartOf="@id/newtopic_username"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_account_circle_black_24dp" />

            <TextView
                android:id="@+id/newtopic_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/newtopic_boardname"
                android:layout_margin="5dp"

                android:textAppearance="?attr/textAppearanceListItem"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                tools:text="username" />



            <TextView
                android:id="@+id/newtopic_createtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="createTime" />
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
