<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.cc98.mycc98">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <supports-screens android:anyDensity="true" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mycc98"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.cc98.mycc98.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.AboutActivity"
            android:label="About"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.cc98.mycc98.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.SettingActivity"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.cc98.mycc98.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.PmActivity"
            android:label="PM"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.EditActivity"
            android:label="Editor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.PostReadActivity" />
        <activity
            android:name=".activity.UserProfileActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity android:name=".activity.ABoardViewActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PreviewActivity"
            android:label="Preview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.SearchViewActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.VersionCheckService"
            android:enabled="true"
            android:exported="true" />

        <meta-data
            android:name="BaiduMobAd_CHANNEL"
            android:value="General" />
        <meta-data
            android:name="BaiduMobAd_STAT_ID"
            android:value="1cb1b0961e" />
        <meta-data
            android:name="BaiduMobAd_SEND_STRATEGY"
            android:value="APP_START" />
        <meta-data
            android:name="BaiduMobAd_ONLY_WIFI"
            android:value="true" />
        <meta-data
            android:name="BaiduMobAd_CELL_LOCATION"
            android:value="true" />
        <meta-data
            android:name="BaiduMobAd_WIFI_LOCATION"
            android:value="true" />
        <meta-data
            android:name="BaiduMobAd_EXCEPTION_LOG"
            android:value="true" />

        <activity android:name=".activity.NormalWebviewActivity" />
        <activity android:name=".activity.PhotoViewActivity"></activity>
    </application>

</manifest>